/* pages/servant/servant_detail.wxss */

.weui-form-preview {
  margin-bottom: 25px;
}

.c--f60 {
  color: #f60;
}

.clamp1, .clamp2, .clamp3 {
  display: -webkit-box !important;
  overflow: hidden;
  -webkit-box-orient: vertical;
}

.clamp1 {
  -webkit-line-clamp: 1;
}

.clamp2 {
  -webkit-line-clamp: 2;
}

.clamp3 {
  -webkit-line-clamp: 3;
}

.carts-list {
  padding: 0 20rpx;
}

.carts-list .carts-item {
  border-top: 1rpx solid;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  width: 100%;
  position: relative;
}

.carts-list .carts-item:nth-child(1) {
  border-top: 0;
}

.carts-item .carts-cnt {
  flex: 1;
  padding: 0 20rpx;
}

.carts-cnt .carts-image {
  float: left;
  margin-right: 20rpx;
  height: 150rpx;
  width: 150rpx;
}

.carts-cnt .carts-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 150rpx;
}

.carts-cnt .carts-title {
  font-size: 35rpx;
}

.carts-cnt .carts-subtitle {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
}

.carts-list .carts-item .carts-del {
  position: absolute;
  top: 20rpx;
  right: 10rpx;
}

/*数量加减*/

.carts-num {
  border: 1rpx solid #aaa;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  align-self: flex-end;
  text-align: center;
  height: 50rpx;
}

.carts-num input {
  border-left: 1rpx solid #aaa;
  border-right: 1rpx solid #aaa;
  font-size: 30rpx;
  font-family: arial;
  height: 50rpx;
  line-height: 50rpx;
  width: 80rpx;
}

.carts-num .minus, .carts-num .plus {
  color: #000;
  text-align: center;
  line-height: 50rpx;
  width: 40rpx;
}

.carts-num .minus {
  font-size: 30rpx;
}

.carts-num .minus.disabled {
  color: #ccc;
}

.carts-num .plus {
  font-size: 34rpx;
}

.weui-form-preview__value2 {
  font-size: 20rpx;
}

.weui-form-preview__value1 {
  font-size: 24rpx;
}

.weui-form-preview__value1 {
  font-size: 24rpx;
}

/*外部容器*/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/*整体列表*/

.carts-list1 {
  display: flex;
  flex-direction: column;
  padding: 20rpx 40rpx;
}

/*每行单元格*/

.carts-item1 {
  display: flex;
  flex-direction: row;
  height: 180rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  width: 100%;
}

.carts-item2 {
  display: flex;
  flex-direction: column;
  height: 250rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  width: 100%;
}

/*左部图片*/

.carts-image1 {
  width: 140rpx;
  height: 140rpx;
}

.carts-image2 {
  width: 50px;
  height: 50px;
}

/*右部描述*/

.carts-text1 {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/*右上部分标题*/

.carts-title1 {
  margin-left: 10rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
}

/*右下部分描述*/

.carts-subtitle1 {
  font-size: 24rpx;
  color: darkgray;
  padding-left: 10rpx;
}

.slide-item {
  height: 20px;
  display: flex;
  flex-direction: row;
}

.slidewrapName {
  font-size: 15px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  width: 30%;
}

.slidewrap {
  width: 80%;
  height: 20px;
  line-height: 20px;
  text-align: center;
}

.slide {
  height: 20px;
}

.itemList {
  margin-top: 5px;
  height: 18px;
  width: 200px;
  display: flex;
  flex-direction: row;
}

.item1 {
  margin-right: 5px;
  font-size: 15px;
  color: black;
  width: 35px;
  text-align: center;
  border-color: orange;
  border-style: solid;
  border-width: 1px;
  height: 18px;
  line-height: 18px;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 35%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}

.drawer_title {
  padding: 15px;
  font: 15px;
  text-align: center;
}

.drawer_content {
  height: 210px;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.btn_ok {
  padding: 10px;
  font: 15px;
  text-align: center;
  border-top: 1px solid #e0e0e0;
  color: #3cc51f;
}

.table {
  border: 1px solid #aaa;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 55px;
  align-items: center;
}

.td {
  width: 100%;
  height: 100%;
  justify-content: center;
  text-align: center;
  border: solid #aaa 1px;
}

.middle {
  display: table-cell;
  vertical-align: middle;
  text-align: center; /*设置文本水平居中*/
  width: 100%;
}

.bg-w {
  background: #dfffdf;
}

.bg-g {
  background: green;
}

.th {
  width: 100%;
  justify-content: center;
  background: #e6f3f9;
  color: green;
  display: flex;
  height: 55px;
  align-items: center;
  border: solid #aaa 1px;
}
